<header>
  <!-- navigation -->
  <nav class="navbar navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/">
        <img
          src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png"
          width="30"
          height="30"
          class="d-inline-block align-top"
          alt="好。吃"
        />
        我的餐廳清單
      </a>
      <!-- add resaurant-->
      <form action="/restaurants/new" style="display:inline"><button
        >新增餐廳</button>
      </form>
    </div>
  </nav>

  <div class="banner"></div>
</header>

<h1 class="mb-1 restaurant-show-title d-flex">{{restDetail.name}}</h1>
<div class="button-container d-flex d-inline flex-row-reverse">
  <form action="/restaurants/edit/{{restDetail._id}}" method="GET">
    <button class="btn btn-success">編輯餐廳</button></form>
  <form action="/restaurants/{{restDetail._id}}?_method=DELETE" method="POST">
    <button class="btn btn-danger">刪除餐廳</button></form>
</div>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          店名：
        </span>
        {{restDetail.name}}
        |
        {{restDetail.name_en}}
      </p>
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{restDetail.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{restDetail.location}}
        <a
          href={{restDetail.google_map}}
          class="text-secondary"
          target="_blank"
        >
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{restDetail.phone}}
      </p>
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          Google Map：
        </span>
        {{restDetail.google_map}}
      </p>
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          評分：
        </span>
        {{restDetail.rating}}
      </p>
      <p class="mb-5">
        {{restDetail.description}}
      </p>

      <img
        class="rounded mx-auto d-block mb-4 w-100"
        src={{restDetail.image}}
        alt={{restDetail.name}}
        style="max-width: 600px;"
      />
    </div>
  </div>
</div>